%%[

Var @ServicingTeam, @contactLink, @contactLinkIT, @supportBaseURL, @contentBlockID

Set @ServicingTeam = AttributeValue("ServicingTeam")
SET @supportBaseURL = "https://support.hospitality.milanocortina2026.org/s/?language="

/* Default contact link and content block */
SET @contactLink = CONCAT(@supportBaseURL, "it")
SET @contentBlockID = 37182

IF @ServicingTeam == 'CG/CI' THEN
  SET @contactLink = 'pgm_cgci_mc26@onlocationexp.com'
  SET @contentBlockID = 37180

ELSEIF @ServicingTeam == 'NOC' THEN
  SET @contactLink = 'mc26hospitalitynoc@onlocationexp.com'
  SET @contentBlockID = 37180

ELSEIF @ServicingTeam == 'NPC' THEN
  SET @contactLink = 'mc26hospitalitynpc@onlocationexp.com'
  SET @contentBlockID = 37180

ELSEIF @ServicingTeam == 'IF' THEN
  SET @contactLink = 'mc26hospitalityif@onlocationexp.com'
  SET @contentBlockID = 37180

ELSEIF @ServicingTeam == 'STK' THEN
  SET @contactLink = 'mico2026hospitality@onlocationexp.com'
  SET @contentBlockID = 37180

ELSEIF @ServicingTeam == 'General Servicing' OR @ServicingTeam == 'Core Servicing' THEN
  
  SET @contactLink = CONCAT(@supportBaseURL, "it")
  SET @contentBlockID = 37182

ELSEIF @ServicingTeam == 'Premium' OR @ServicingTeam == 'Premium +' THEN
  SET @contactLink = 'premiumclientmgmt.mc26@onlocationexp.com'
  SET @contentBlockID = 37180

ENDIF

/* Fallbacks */
IF EMPTY(@contactLinkIT) THEN
  SET @contactLinkIT = @contactLink
ENDIF

]%%

CTA button is dynamic block %%=ContentBlockByID(@contentBlockID)=%%

